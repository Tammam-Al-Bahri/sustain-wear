generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgres"
}

model User {
  id          String       @id @default(cuid())
  clerkId     String       @unique
  email       String       @unique
  name        String?
  imageUrl    String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  charities   Charity[]
  items       Item[]
  memberships Membership[]
}

model Charity {
  id          String        @id @default(cuid())
  creatorId   String
  name        String
  description String
  address     String
  status      CharityStatus @default(PENDING_APPROVAL)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  user        User          @relation(fields: [creatorId], references: [id])
  donations   Donation[]
  memberships Membership[]
}

model Membership {
  id        String           @id @default(cuid())
  userId    String
  charityId String
  role      MembershipRole   @default(STAFF)
  status    MembershipStatus @default(PENDING_APPROVAL)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  charity   Charity          @relation(fields: [charityId], references: [id])
  user      User             @relation(fields: [userId], references: [id])

  @@unique([userId, charityId])
}

model Item {
  id          String        @id @default(cuid())
  userId      String
  imageUrls   String[]
  name        String
  description String?
  mass        Float
  material    ItemMaterial
  size        ItemSize
  type        ItemType
  category    ItemCategory
  condition   ItemCondition
  status      ItemStatus    @default(UNLISTED)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  donation    Donation?
  user        User          @relation(fields: [userId], references: [id])
}

model Donation {
  id        String         @id @default(cuid())
  itemId    String         @unique
  charityId String
  status    DonationStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  charity   Charity        @relation(fields: [charityId], references: [id])
  item      Item           @relation(fields: [itemId], references: [id])
}

enum CharityStatus {
  PENDING_APPROVAL
  ACTIVE
}

enum MembershipRole {
  STAFF
  ADMIN
}

enum MembershipStatus {
  PENDING_APPROVAL
  ACTIVE
}

enum ItemSize {
  XS
  S
  M
  L
  XL
  XXL
}

enum ItemType {
  SHIRT
  TROUSERS
  JACKET
  SHOES
  ACCESSORY
}

enum ItemCategory {
  MENS
  WOMENS
  UNISEX
  KIDS
}

enum ItemCondition {
  NEW
  GOOD
  FAIR
}

enum ItemStatus {
  UNLISTED
  LISTED
  CLAIMED
}

enum ItemMaterial {
  COTTON
  WOOL
  POLYESTER
  LEATHER
}

enum DonationStatus {
  PENDING
  SENT
  RECEIVED
}
