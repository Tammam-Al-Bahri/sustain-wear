generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  clerkId String @unique
  email String @unique
  name String?
  imageUrl String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}